<controls:FancyWindow xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    Title="{Loc 'pen-light-exam-title'}"
    SetSize="0 -300">
    <ScrollContainer
        VerticalExpand="True">
        <BoxContainer
            Name="RootContainer"
            Orientation="Vertical" HorizontalExpand="True">
            <Label
                Name="NoPatientDataText"
                Text="{Loc pen-light-window-no-patient-data-text}" />
            <BoxContainer
                Name="ExamDataContainer"
                Orientation="Vertical"
                Margin="0 0 5 10">
            <Label
                    Name="PatientName"/>
            <Label
                    Name="Blind"
                    Margin="5" />
                <Label
                    Name="Drunk"
                    Margin="5" />
                <Label
                    Name="EyeDamage"
                    Margin="5" />
                <Label
                    Name="Healthy"
                    Margin="5" />
                <Label
                    Name="SeeingRainbows"
                    Margin="5" />

            </BoxContainer>
        </BoxContainer>
    </ScrollContainer>
</controls:FancyWindow>