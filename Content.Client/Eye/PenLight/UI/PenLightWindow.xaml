<controls:FancyWindow xmlns="https://spacestation14.io"
                xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                Title="{Loc 'pen-light-exam-title'}"
                SetSize="150 800">

    <BoxContainer Name="RootContainer" Margin="4 0" Orientation="Horizontal">
         <Label
                Name="NoPatientDataText"
                Text="{Loc pen-light-window-no-patient-data-text}"
         />
        <BoxContainer Orientation="Vertical" HorizontalExpand="True">
        <Label Name="PatientName"/>
            <GridContainer Name="Damages" Margin="2 0 0 0" Columns="2">
                <!-- Stuff goes here -->
                <Label
                    Name="Blind"
                    Margin="0 5 0 0"
                />
                <Label
                    Name="Drunk"
                    Margin="0 5 0 0"
                />
                <Label
                    Name="EyeDamage"
                    Margin="0 5 0 0"
                />
                <Label
                    Name="SeeingRainbows"
                    Margin="0 5 0 0"
                />
            </GridContainer>
        </BoxContainer>
    </BoxContainer>

</controls:FancyWindow>